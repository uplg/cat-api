{
  "name": "cat-monitor",
  "version": "1.0.0",
  "private": true,
  "description": "Control your Tuya-based cat (IoT) devices locally using an API",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "bun --watch src/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --compile --outfile server",
    "build:frontend": "cd frontend && npm run build"
  },
  "keywords": [
    "tuya",
    "catit",
    "smart-feeder",
    "smart-litter-box",
    "hono",
    "api"
  ],
  "author": "Uplg",
  "license": "MIT",
  "dependencies": {
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/openapi": "^1.4.11",
    "dotenv": "^17.2.3",
    "elysia": "^1.4.19",
    "tuyapi": "^7.7.1",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.1",
    "bun-types": "1.3.4",
    "concurrently": "^9.2.1"
  }
}
