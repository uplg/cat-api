    "tuyapi": "github:codetheweb/tuyapi"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/node": "^22.15.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
